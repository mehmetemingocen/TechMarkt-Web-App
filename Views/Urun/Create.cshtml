@model UrunCreateModel
@{
    Layout = "_AdminLayout";
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<div class="row">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header py-1 d-flex justify-content-between align-items-center">
                <h5 class="card-title">Add Product</h5>
                <a asp-controller="Urun" asp-action="Index" class="btn btn-sm btn-primary">
                    <i class="fa-solid fa-list"></i>
                </a>
            </div>
            <div class="card-body">
                <div asp-validation-summary="All" class="text-danger"></div>
                <form method="post" enctype="multipart/form-data">
                    <div class="row mb-3">
                        <label asp-for="UrunAdi" class="col-sm-2 col-form-label">Product Name</label>
                        <div class="col-sm-10">
                            <input asp-for="UrunAdi" class="form-control">
                            <span asp-validation-for="UrunAdi" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Aciklama" class="col-sm-2 col-form-label">Explanation</label>
                        <div class="col-sm-10">
                            <textarea asp-for="Aciklama" rows="3" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Fiyat" class="col-sm-2 col-form-label">Cost</label>
                        <div class="col-sm-10">
                            <input asp-for="Fiyat" class="form-control">
                            <span asp-validation-for="Fiyat" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Aktif" class="col-sm-2 col-form-label">Active</label>
                        <div class="col-sm-10">
                            <input asp-for="Aktif" class="form-check-input">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Anasayfa" class="col-sm-2 col-form-label">Home</label>
                        <div class="col-sm-10">
                            <input asp-for="Anasayfa" class="form-check-input">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Resim" class="col-sm-2 col-form-label">Product Image</label>
                        <div class="col-sm-10">
                            <input asp-for="Resim" class="form-control">
                            <span asp-validation-for="Resim" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="KategoriId" class="col-sm-2 col-form-label">Category</label>
                        <div class="col-sm-10">
                            <select asp-for="KategoriId" class="form-select" asp-items="ViewBag.Kategoriler">
                                <option value="" selected>Please select</option>
                            </select>
                            <span asp-validation-for="KategoriId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>