@model List<Order>

@section Bar {
    <section class="bg-primary p-3">
        <div class="container">
            <nav>
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item">
                        <a href="#">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        Orders
                    </li>
                </ol>
            </nav>
        </div>
    </section>
}

<section class="mt-3">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                @await Html.PartialAsync("Partials/Site/_AccountSideBar")
            </div>
            <div class="col-9">
                <div class="card shadow">
                    <div class="card-header py-1">
                        <h5 class="card-title mb-0">Orders</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.Count == 0)
                        {
                            <div class="alert alert-warning">You have no orders.</div>
                        }
                        <div class="accordion" id="orders">
                            @foreach (var order in Model)
                            {
                                <div class="accordion-item">
                                    <h2 class="accordion-header">
                                        <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                            data-bs-target="#order_@order.Id">
                                            Order No: #@order.Id
                                        </button>
                                    </h2>
                                    <div id="order_@order.Id" class="accordion-collapse collapse p-3"
                                        data-bs-parent="#orders">
                                        <table class="table table-bordered mb-0">
                                            <tr>
                                                <td colspan="2">
                                                    Delivery Date
                                                </td>
                                                <td colspan="3">
                                                    @order.SiparisTarihi
                                                </td>
                                            </tr>
                                            <tr>
                                                <td colspan="2">
                                                    Name Surname
                                                </td>
                                                <td colspan="3">
                                                    @order.AdSoyad
                                                </td>
                                            </tr>
                                            <tr>
                                                <td colspan="2">
                                                    Delivery Address
                                                </td>
                                                <td colspan="3">
                                                    @order.AdresSatiri / @order.Sehir / @order.PostaKodu / @order.Telefon
                                                </td>
                                            </tr>
                                            @foreach (var item in order.OrderItems)
                                            {
                                                <tr>
                                                    <td style="width: 80px;">
                                                        <img src="~/img/@item.Urun.Resim" class="img-fluid" alt="">
                                                    </td>
                                                    <td>@item.Urun.UrunAdi</td>
                                                    <td>@item.Fiyat ₺</td>
                                                    <td>@item.Miktar <span>piece</span></td>
                                                    <td>@(item.Fiyat* item.Miktar) ₺</td>
                                                </tr>
                                            }
                                            <tr>
                                                <td colspan="3"></td>
                                                <td>Subtotal</td>
                                                <td>@order.AraToplam() ₺</td>
                                            </tr>
                                            <tr>
                                                <td colspan="3"></td>
                                                <td>Total</td>
                                                <td>@order.Toplam() ₺</td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>