@model Slider
@{
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col ">
        <div class="card">
            <img src="~/img/@Model.Resim" class="card-img-top" alt="">
            <div class="card-body text-center">
                <p>
                    Do you want to delete the slider named @Model.Baslik ?
                </p>
                <form asp-controller="Slider" asp-action="DeleteConfirm" method="post">
                    <input type="hidden" name="id" value="@Model.Id">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a class="btn btn-primary" asp-controller="Slider" asp-action="Index">Cancel</a>
                </form>
            </div>
        </div>

    </div>
</div>
